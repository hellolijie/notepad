<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.lijie.notepad"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="10" />

    <application
        android:name=".MApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" 
        android:theme="@style/Theme.Sherlock.Light">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".NotepadActivity"></activity>
        <activity android:name="cn.lijie.notepad.activity.DrawActivity"></activity>
        <activity android:name="cn.lijie.notepad.activity.AudioActivity"></activity>
        <activity android:name="cn.lijie.notepad.activity.TextActivity"></activity>
    </application>

</manifest>